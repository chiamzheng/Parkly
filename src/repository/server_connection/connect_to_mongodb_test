const { UserAccount } = require("../models/userAccount.js");

const userAccountRead = require("../retrieval and manipulation/readDatabase/userAccountRead.js")
const userAccountWrite = require("../retrieval and manipulation/writeDatabase/userAccountWrite.js")

const { MongoClient } = require('mongodb');
const uri = "mongodb+srv://lyh0805:abcd1234@parkly.pup5x.mongodb.net/?retryWrites=true&w=majority&appName=Parkly";

const DBclient = new MongoClient(uri);

async function connectDB() {
//  if (!client.isConnected()) {
  await DBclient.connect();
  console.log("Connected to MongoDB!");
//  }
}

async function closeDB() {
  await DBclient.close();
  console.log("Disconnected from MongoDB!");
}

function getDB(dbName) {
  return DBclient.db(dbName);
}

async function main() {
  try {
      await connectDB(); // Wait for the connection to complete
      const result = await userAccountWrite.addAccount("abcd@gmail.com", "abcd1234", "abcd1234"); // Await the addAccount result
      console.log("Add account result:", result);

      const allUsers = await UserAccount.find({});
      console.log("All users in collection:", allUsers);

    } catch (error) {
      console.error("Error:", error);
  } finally {
      await closeDB(); // Ensure the connection is closed in the end
  }
}

// Call the main function
main();

module.exports = {
  DBclient,
  connectDB,
  closeDB,
  getDB,
};
